---
import CartIcon from "./CartIcon.svelte";
import MobileMenuDrawer from "./MobileMenuDrawer.svelte";

const navLinks = [
  { label: "Bestsellers", href: "/collections/best-sellers" },
  { label: "Men", href: "/collections/men" },
  { label: "Women", href: "/collections/women" },
  { label: "Jewelry", href: "/collections/jewelry" },
  { label: "About", href: "/about" },
];
---

<header class="sticky top-0 z-40">
  <div class="border-b border-black/10 bg-cream/80 backdrop-blur-xl">
    <div class="container flex items-center justify-between py-4">
      <div class="flex items-center gap-3 lg:gap-6">
        <div class="lg:hidden">
          <MobileMenuDrawer links={navLinks} client:load />
        </div>
        <a href="/" class="flex flex-col leading-none">
          <span
            class="text-[10px] font-semibold uppercase tracking-[0.45em] text-ink/60"
          >
            Cabrillo, CA
          </span>
          <span
            class="text-base font-semibold uppercase tracking-[0.3em] sm:text-lg"
          >
            Beardless Cub
          </span>
        </a>
      </div>

      <nav
        class="hidden items-center gap-8 text-xs font-semibold uppercase tracking-[0.25em] lg:flex"
      >
        {
          navLinks.map((link) => (
            <a class="transition hover:text-black/60" href={link.href}>
              {link.label}
            </a>
          ))
        }
      </nav>

      <div class="flex items-center gap-4">
        <a
          class="hidden text-xs font-semibold uppercase tracking-[0.25em] text-black/70 transition hover:text-black lg:block"
          href="/search"
        >
          Search
        </a>
        <a
          class="button-outline hidden lg:inline-flex"
          href="/collections/best-sellers"
        >
          Shop Now
        </a>
        <CartIcon client:load />
      </div>
    </div>
  </div>
</header>
