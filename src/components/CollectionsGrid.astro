---
import type { z } from "zod";
import type { ImageResult } from "../utils/schemas";
import ShopifyImage from "./ShopifyImage.svelte";

type CollectionImage = z.infer<typeof ImageResult> | null;

export interface CollectionItem {
  title: string;
  description: string;
  href: string;
  image?: CollectionImage;
}

const fallbackCollections: CollectionItem[] = [
  {
    title: "Women",
    description: "Refined silhouettes and elevated layers.",
    href: "/collections/women",
  },
  {
    title: "Men",
    description: "Tailored essentials for modern wardrobes.",
    href: "/collections/men",
  },
  {
    title: "Jewelry",
    description: "Statement pieces and everyday shine.",
    href: "/collections/jewelry",
  },
  {
    title: "Bestsellers",
    description: "The pieces everyone returns for.",
    href: "/collections/best-sellers",
  },
];

const { collections = fallbackCollections } = Astro.props as {
  collections?: CollectionItem[];
};
---

<section>
  <div class="container py-12">
    <div class="flex flex-wrap items-end justify-between gap-6">
      <div>
        <p class="luxury-eyebrow">Collections</p>
        <h2 class="section-title">Shop by category</h2>
        <p class="section-subtitle">
          Curated for a boutique experience with premium finishes.
        </p>
      </div>
    </div>

    <div class="mt-10 grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {
        collections.map((collection) => (
          <a
            class="card-shell group flex flex-col overflow-hidden transition hover:-translate-y-1 hover:shadow-lg"
            href={collection.href}
          >
            <div class="relative aspect-square overflow-hidden bg-sand">
              {collection.image ? (
                <ShopifyImage
                  image={collection.image}
                  classList="absolute inset-0 h-full w-full object-cover"
                  loading="lazy"
                  sizes="(min-width: 1024px) 260px, 50vw"
                />
              ) : (
                <div class="flex h-full items-center justify-center text-xs font-semibold uppercase tracking-[0.25em] text-ink/60">
                  {collection.title}
                </div>
              )}
            </div>
            <div class="flex flex-1 flex-col justify-between gap-6 p-6">
              <div>
                <p class="luxury-eyebrow">{collection.title}</p>
                <p class="mt-3 text-sm text-ink/70">{collection.description}</p>
              </div>
              <span class="text-xs font-semibold uppercase tracking-[0.25em] text-ink">
                Shop now
              </span>
            </div>
          </a>
        ))
      }
    </div>
  </div>
</section>
